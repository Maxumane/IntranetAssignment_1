@model IEnumerable<consumeHockeyAPI.Models.Player>

@{
    ViewData["Title"] = "Roster";
}

    <div>
        <h1 class="display-4">@ViewData["Title"]</h1>

        <table class="table table-striped table-bordered">
            <tr>
                <th>@Html.DisplayNameFor(model => model.person.fullName)</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a asp-action="PlayerDetails" asp-route-id="@item.person.id">@item.person.fullName</a></td>
                </tr>
            }
        </table>

    </div>